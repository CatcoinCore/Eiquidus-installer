[Unit]
Description=Catcoin service
After=network.target
[Service]
Type=forking
ExecStart=/usr/local/bin/catcoind -conf=/home/explorer/.catcoin/catcoin.conf -datadir=/home/explorer/.catcoin -daemon
ExecStop=/usr/local/bin/catcoind -conf=/home/explorer/.catcoin/catcoin.conf -datadir=/home/explorer/.catcoin stop
ExecReload=/usr/local/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=30
TimeoutStopSec=120
PrivateTmp=true
LimitNOFILE=65536
User=explorer
[Install]
WantedBy=multi-user.target
